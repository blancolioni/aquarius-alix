class
   Test_Boolean_Implies
   
inherit
   Unit_Test
      redefine Name, Execute end
      
feature

   Name : String
      do
         Result := "test-boolean-implies"
      end
      
   Execute
      local
         A, B, C, D : Boolean
      do
         A := False implies False
         B := False implies True
         C := True implies False
         D := True implies True
         Success := A
         Success := Success and B
         Success := Success and not C
         Success := Success and D

         if not Success then
           Fail_Message := "Incorrect results:"
           if not A then
              Fail_Message := Fail_Message & " F=>F"
           end
           if not B then
              Fail_Message := Fail_Message & " F=>T"
           end
           if C then
              Fail_Message := Fail_Message & " T=>F"
           end
           if not D then
              Fail_Message := Fail_Message & " T=>T"
           end
        end
     end
      
end 
