class
   Petal.Checks.Sequence_Of_Statements
   
inherit 
   Petal.Context
   Aquarius.Trees.Program_Tree
   
feature

   Statements : Petal.Statements
   
   Set_Statements (Sts : Petal.Statements)
      do
         Statements := Sts
      end
      
   After_Statement (St : Petal.Checks.Statement)
      do
         if attached St.Statement as Stat then
            Statements.Statements.Append (Stat)
         end
      end
      
end
