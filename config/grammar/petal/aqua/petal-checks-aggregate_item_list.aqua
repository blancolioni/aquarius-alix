class Petal.Checks.Aggregate_Item_List
inherit
   Petal.Context
   Petal.Expression
   
feature { Petal.Checks.Aggregate }

   Agg_Value : Petal.Value.Aggregate_Value
   
   Set_Aggregate_Value (A : Petal.Value.Aggregate_Value)
      do
         Agg_Value := A
      end
   
   After_Aggregate_Item (Child : Petal.Checks.Aggregate_Item)
      do
         if attached Child.Value as V then
            Agg_Value.Append (V)
         end
      end
      
end