class Petal.Checks.Invocation_Arguments
inherit
   Petal.Context

feature

   Invoke : Petal.Statement.Invoke_Statement
   
   Set_Invoke_Statement (S : Petal.Statement.Invoke_Statement)
      do
         Invoke := S
      end

feature

   Before_Invocation_Argument (Child : Petal.Checks.Invocation_Argument)
      do 
         Child.Set_Invoke_Statement (Invoke)      
      end
      
end
