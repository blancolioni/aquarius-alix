class Petal.Checks.List_Of_Declarations
inherit 
   Petal.Context

feature

   Before_Node 
   local
      Local_Context : Petal.Entry_Table
   do
      create Local_Context.Make ("list-of-declarations", Context)
      Context := Local_Context
   end
   
   After_Declaration (Child : Petal.Checks.Declaration)
      do
         if attached Child.Entry as E then
            Context.Insert (E)
         end
      end
      
end
