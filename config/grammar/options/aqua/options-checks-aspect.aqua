class Options.Checks.Aspect
   inherit Aqua.Text_IO
           Options.Option_Entry_Node
           
feature

   Node  : Options.Syntax.Aspect_Node
   
   After_Node
   do
      Put_Line ("After aspect node")
      if attached Node.String_Literal as S then
         Entry.Set_Long_Name (S)
      end
      if attached Node.Character_Literal as C then
         Entry.Set_Short_Name (C.First_Element)
      end
   end
   
end