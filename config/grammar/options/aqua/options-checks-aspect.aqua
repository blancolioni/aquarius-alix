class Options.Checks.Aspect
     
feature

   Node  : Options.Syntax.Aspect_Node
   
   Option_Entry : Options.Entry
   
   After_Node
   do
      if Node.String_Literal /= Void then
         Entry.Set_Long_Name (Node.String_Literal.Text)
      end if
      if Node.Character_Literal /= Void then
         Entry.Set_Short_Name (Node.Character_Literal.First_Element)
      end if
   end
   
end